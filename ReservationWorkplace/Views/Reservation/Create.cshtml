@model ReservationWorkplace.Models.ReservationViewModel

@{
    ViewData["Title"] = "Create Reservation";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">

            <div class="form-group">
                <label asp-for="EmployeeId" class="control-label">Employee</label>
                <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.Employees">
                    <option value="" hidden>--Select Employee--</option>
                </select>

            </div>
            <div class="form-group">
                <label asp-for="WorkplaceId" class="control-label">Workplace</label>
                <select asp-for="WorkplaceId" class="form-control" asp-items="ViewBag.Workplaces">
                    <option value="" hidden>--Select Workplace--</option>
                </select>

            </div>
            <div class="form-group">
                <label asp-for="TimeFrom" class="control-label">Time From</label>
                <input asp-for="TimeFrom" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="TimeTo" class="control-label">Time To</label>
                <input asp-for="TimeTo" class="form-control" />

            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>